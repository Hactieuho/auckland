<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        Text view style-->
        <item name="android:editTextStyle">@style/InterEditTextStyle</item>
        <item name="android:textViewStyle">@style/InterTextViewStyle</item>
        <item name="android:buttonStyle">@style/InterButtonStyle</item>

        <item name="colorSurface">@color/main_bg_color</item>
        <item name="android:windowBackground">@color/main_bg_color</item>
    </style>

    <style name="InterEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="InterTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="InterButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
</resources>